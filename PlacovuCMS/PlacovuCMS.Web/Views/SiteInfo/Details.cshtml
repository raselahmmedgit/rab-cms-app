@model SiteInfoViewModel
@{
    ViewData["Title"] = "Site Info";
    ViewData["SubTitle"] = "Site Info";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row mb-4">
    <div class="col-10">
        <h1 class="f-26">@ViewData["SubTitle"]</h1>
    </div>
    <div class="col-2 text-right">
        <a href="@Url.Action("Index", "SiteInfo", new { Area = "" })" title="Back" class="btn btn-secondary">Back</a>
    </div>
</div>

@Html.RenderAlert("SiteInfoMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form action="javascript.void(0);" class="form form-horizontal">

                    <div class="form-body">
                        <div class="form-group row">
                            <label asp-for="SiteTitle" class="col-3 control-label"></label>
                            <div class="col-4">
                                @Model.SiteTitle
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="SiteDescription" class="col-3 control-label"></label>
                            <div class="col-4">
                                @Model.SiteDescription
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="SiteKeywords" class="col-3 control-label"></label>
                            <div class="col-4">
                                @Model.SiteKeywords
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="SiteLogoUrl" class="col-3 control-label"></label>
                            <div class="col-4">
                                @Model.SiteLogoUrl
                            </div>
                        </div>
                        <div class="form-actions form-actions-new">
                            <div class="row">
                                <div class="col-12">
                                    <a href="@Url.Action("Index", "SiteInfo", new { Area = "" })" title="Back" class="btn btn-danger">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>



