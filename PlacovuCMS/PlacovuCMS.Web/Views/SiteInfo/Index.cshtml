@{
    ViewData["Title"] = "Site Info";
    ViewData["SubTitle"] = "Site Info";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row mb-4">
    <div class="col-10">
        <h1 class="f-26">@ViewData["SubTitle"]</h1>
    </div>
    <div class="col-2 text-right">
        <a href="@Url.Action("Add", "SiteInfo", new { Area = "" })" title="Add" class="btn btn-primary">Add New</a>
    </div>
</div>

@Html.RenderAlert("SiteInfoMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="dataTablesSiteInfo" class="table table-hover" style="width:100%"></table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/admin/js/siteinfo.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            SiteInfo.LoadDataTables('dataTablesSiteInfo', App.DisplayLength(), ("/SiteInfo/GetDataAsync"));
        });
    </script>
}