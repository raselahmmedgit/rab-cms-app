@model EmailSmsConfigViewModel
@{
    ViewData["Title"] = "All EmailSmsConfig";
    ViewData["SubTitle"] = "All EmailSmsConfig";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row mb-4">
    <div class="col-8">
        <h1 class="f-26">@ViewData["SubTitle"]</h1>
    </div>
    <div class="col-4 text-right">
        <a href="@Url.Action("Add", "EmailSmsConfig", new { Area = "" })" title="Add EmailSmsConfig" class="btn btn-primary">Add Email/Sms Config</a>
    </div>
</div>

@Html.RenderAlert("EmailSmsConfigMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="dataTablesEmailSmsConfig" class="table table-hover" style="width:100%"></table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/admin/js/email-sms-config.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            EmailSmsConfig.LoadDataTables('dataTablesEmailSmsConfig', App.DisplayLength(), ("/EmailSmsConfig/GetDataAsync"));
        });
    </script>
}
