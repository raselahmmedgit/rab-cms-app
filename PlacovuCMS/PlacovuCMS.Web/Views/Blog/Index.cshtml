@{
    ViewBag.Title = "All Blog";
    ViewData["SubTitle"] = "All Blog";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row mb-4">
    <div class="col-10">
        <h1 class="f-26">@ViewData["SubTitle"]</h1>
    </div>
    <div class="col-2 text-right">
        <a href="@Url.Action("Add", "Blog", new { Area = "" })" title="Add" class="btn btn-primary">Add New</a>
    </div>
</div>

@Html.RenderAlert("BlogMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="dataTablesBlog" class="table table-hover w-100"></table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin/js/blog.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            Blog.LoadDataTables('dataTablesBlog', App.DisplayLength(), ("/Blog/GetDataAsync"));
        });
    </script>
}
