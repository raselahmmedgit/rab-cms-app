@{
    ViewData["Title"] = "All Menu";
    ViewData["SubTitle"] = "All Menu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row mb-4">
    <div class="col-8">
        <h1 class="f-26">@ViewData["SubTitle"]</h1>
    </div>
    <div class="col-2 text-right">
        <button data-href="@Url.Action("CreateSiteMap", "Menu", new { Area = "" })" title="Create Site Map" class="btn btn-secondary">Create Site Map</button>
    </div>
    <div class="col-2 text-right">
        <a href="@Url.Action("Add", "Menu", new { Area = "" })" title="Add Menu" class="btn btn-primary">Add Menu</a>
    </div>
</div>

@Html.RenderAlert("MenuMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="dataTablesMenu" class="table table-hover w-100"></table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin/js/menu.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            Menu.LoadDataTables('dataTablesMenu', App.DisplayLength(), ("/Menu/GetDataAsync"));
        });
    </script>
}
