@{
    ViewData["Title"] = "All Page";
    ViewData["SubTitle"] = "All Page";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row mb-4">
    <div class="col-10">
        <h1 class="f-26">@ViewData["SubTitle"]</h1>
    </div>
    <div class="col-2 text-right">
        <a href="@Url.Action("Add", "Page", new { Area = "" })" title="Add Page" class="btn btn-primary">Add Page</a>
    </div>
</div>

@Html.RenderAlert("PageMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="dataTablesPage" class="table table-hover" style="width:100%"></table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin/js/page.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            Page.LoadDataTables('dataTablesPage', App.DisplayLength(), ("/Page/GetDataAsync"));
        });
    </script>
}
