@model PageViewModel
@{
    ViewData["Title"] = ViewBag.Title;
    ViewData["SubTitle"] = ViewBag.Title;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles{
    <environment include="Development">
        <link href="~/site/css/style.css" rel="stylesheet" />
        <link href="~/site/css/site.css" rel="stylesheet" />
    </environment>
}
<script src="~/lib/CKEditor/ckeditor.js" type="text/javascript" language="javascript"></script>
<div class="row mb-4">
    <div class="col-10">
        <h1 class="f-26">@ViewData["SubTitle"]</h1>
    </div>
    <div class="col-2 text-right">
        <a href="@Url.Action("Index", "Page", new { Area = "" })" title="Back" class="btn btn-secondary">Back</a>
    </div>
</div>

@Html.RenderAlert("PageMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h2>@TempData["result"]</h2>
                <form method="post">
                    <div class="form-body">
                        <div class="form-group row">
                            <label asp-for="Name" class="col-3 control-label"></label>
                            <div class="col-4">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Url" class="col-3 control-label">Url: @Context.Request.Scheme://@Context.Request.Host/</label>
                            <div class="col-4">
                                <input asp-for="Url" class="form-control" />
                                <span asp-validation-for="Url"></span>
                            </div>
                            <div class="col-5">
                                <p class="text-muted">example: @Context.Request.Scheme://@Context.Request.Host/sample</p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Description" class="col-12 control-label"></label>
                            <div class="col-12">
                                <textarea asp-for="Description"></textarea>
                                @*<label asp-for="Description"></label>
                                    <textarea asp-for="Description"></textarea>*@
                                <script type="text/javascript" language="javascript">
                                    CKEDITOR.replace(@Html.IdFor(model => model.Description));
                                    CKEDITOR.config.allowedContent = true
                                    CKEDITOR.ignoreEmptyParagraph = true;
                                </script>
                                <span asp-validation-for="Description"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="MetaTitle" class="col-3 control-label"></label>
                            <div class="col-4">
                                <input asp-for="MetaTitle" class="form-control" />
                                <span asp-validation-for="MetaTitle"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="MetaKeyword" class="col-3 control-label"></label>
                            <div class="col-4">
                                <input asp-for="MetaKeyword" class="form-control" />
                                <span asp-validation-for="MetaKeyword"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="MetaDescription" class="col-3 control-label"></label>
                            <div class="col-4">
                                <input asp-for="MetaDescription" class="form-control" />
                                <span asp-validation-for="MetaDescription"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Status" class="col-3 control-label"></label>
                            <div class="col-4">
                                <select asp-for="Status" class="form-control">
                                    <option value="true">Active</option>
                                    <option value="false">InActive</option>
                                </select>
                                <span asp-validation-for="Status"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions form-actions-new">
                        <div class="row">
                            <div class="col-12">
                                <input type="submit" class="btn btn-primary" value="Submit" />
                                <a href="@Url.Action("Index", "Page", new { Area = "" })" title="Back" class="btn btn-danger ml-2">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @*<environment include="Development">
            <script src="~/site/js/main.js"></script>
            <script src="~/site/js/site.js"></script>
        </environment>*@
}