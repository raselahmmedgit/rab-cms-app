@model SocialMediaConfigViewModel
@{
    ViewData["Title"] = "All Social Media Config";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row mb-4">
    <div class="col-8">
        <h1 class="f-26">All Social Media Config</h1>
    </div>
    <div class="col-4 text-right">
        <a href="@Url.Action("Add", "SocialMediaConfig", new { Area = "" })" title="Add SocialMedia Config" class="btn btn-primary">Add SocialMedia Config</a>
    </div>
</div>

@Html.RenderAlert("SocialMediaConfigMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="dataTablesSocialMediaConfig" class="table table-hover" style="width:100%"></table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/admin/js/social-media-config.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            SocialMediaConfig.LoadDataTables('dataTablesSocialMediaConfig', App.DisplayLength(), ("/SocialMediaConfig/GetDataAsync"));
        });
    </script>
}
