@{
    ViewBag.Title = "All Blog Category";
    ViewData["SubTitle"] = "All Blog Category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row mb-4">
    <div class="col-10">
        <h1 class="f-26">@ViewData["SubTitle"]</h1>
    </div>
    <div class="col-2 text-right">
        <a href="@Url.Action("Add", "BlogCategory", new { Area = "" })" title="Add" class="btn btn-primary">Add New</a>
    </div>
</div>

@Html.RenderAlert("BlogCategoryMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="dataTablesBlogCategory" class="table table-hover w-100" ></table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin/js/blogcategory.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            BlogCategory.LoadDataTables('dataTablesBlogCategory', App.DisplayLength(), ("/BlogCategory/GetDataAsync"));
        });
    </script>
}
