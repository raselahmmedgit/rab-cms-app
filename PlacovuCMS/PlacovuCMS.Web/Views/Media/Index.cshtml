@{
    ViewData["Title"] = "All Media";
    ViewData["SubTitle"] = "All Media";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row mb-4">
    <div class="col-10">
        <h1 class="f-26">@ViewData["SubTitle"]</h1>
    </div>
    <div class="col-2 text-right">
        <a href="@Url.Action("Add", "Media", new { Area = "" })" title="Add Media" class="btn btn-primary">Add Media</a>
    </div>
</div>

@Html.RenderAlert("MediaMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="dataTablesMedia" class="table table-hover" style="width:100%"></table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin/js/media.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            Media.LoadDataTables('dataTablesMedia', App.DisplayLength(), ("/Media/GetDataAsync"));
        });
    </script>
}
